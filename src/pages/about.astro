---
import BaseLayout from "../layouts/base_layout.astro";
import HeaderBlock from "../components/header_block.astro";
import * as AboutMeContent from "../content/pages_content/about_me_text.md";
---

<BaseLayout>
  <HeaderBlock slot="header" />

  <div class="about-wrapper">
    <!-- Side images -->
    <div class="about-image-group left texas-align">
      <img
        src="/website_img/aboutMe_img/Texas_Image.png"
        alt="Mi año en Texas 🇺🇸"
        class="about-side-image"
      />
      <em class="desktop-caption">Mi año en Texas 🇺🇸</em>
    </div>

    <div class="about-image-group right twitch-align">
      <img
        src="/website_img/aboutMe_img/Twitch_Image.png"
        alt="Haciendo mi primer IRL 🎥"
        class="about-side-image"
      />
      <em class="desktop-caption">Haciendo mi primer IRL 🎥</em>
    </div>

    <div class="about-image-group left uni-align">
      <img
        src="/website_img/aboutMe_img/Uni_Image.png"
        alt="Verano en Portsmouth 🌞"
        class="about-side-image"
      />
      <em class="desktop-caption">Verano en Portsmouth 🌞</em>
    </div>

    <div class="about-image-group right today-align">
      <img
        src="/website_img/aboutMe_img/Today_Image.png"
        alt="Vaije a Ibiza 2025 🌴"
        class="about-side-image"
      />
      <em class="desktop-caption">Actualidad</em>
    </div>

    <!-- Markdown content -->
    <div class="about-text">
      <AboutMeContent.Content />
    </div>
  </div>
</BaseLayout>
