---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeaderBlock from "../components/HeaderBlock.astro";
import * as AboutMeContent from "../content/AboutMeContent.md";
---

<BaseLayout>
  <HeaderBlock slot="header" />

  <div class="about-wrapper">
    <!-- 🖼️ Bloque de imágenes laterales -->
    <div class="about-images">
      <div class="about-image-group left texas-align">
        <img
          src="/Images/Texas_Image.png"
          alt="Mi año en Texas 🇺🇸"
          class="about-side-image"
        />
        <em class="desktop-caption">Mi año en Texas 🇺🇸</em>
      </div>

      <div class="about-image-group right twitch-align">
        <img
          src="/Images/Twitch_Image.png"
          alt="Haciendo mi primer IRL 🎥"
          class="about-side-image"
        />
        <em class="desktop-caption">Haciendo mi primer IRL 🎥</em>
      </div>

      <div class="about-image-group left uni-align">
        <img
          src="/Images/Uni_Image.png"
          alt="Verano en Portsmouth 🌞"
          class="about-side-image"
        />
        <em class="desktop-caption">Verano en Portsmouth 🌞</em>
      </div>

      <div class="about-image-group right today-align">
        <img
          src="/Images/Today_Image.png"
          alt="Hoy, escribiendo esta web 💻"
          class="about-side-image"
        />
        <em class="desktop-caption">Actualidad</em>
      </div>
    </div>

    <!-- 📄 Texto completo -->
    <div class="about-text">
      <AboutMeContent.Content />
    </div>
  </div>
</BaseLayout>
